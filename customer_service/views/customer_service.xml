<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="request_cancellation_id" model="ir.ui.view">
        <field name="name">sale.cancellation.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">

<!--            <xpath expr="//header/button[@name='action_confirm']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
            <xpath expr="//header/button[@name='action_draft']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
             <xpath expr="//header/button[@name='action_confirm']" position="replace">
            </xpath>
            <xpath expr="//header/button[@name='action_confirm']" position="replace">
            </xpath>

             <xpath expr="//header/button[@name='action_quotation_send']" position="replace">
            </xpath>

<!--             <xpath expr="//header/button[@name='action_draft']" position="replace">-->
<!--            </xpath>-->

            <xpath expr="//header/button[@name='action_cancel']" position="replace">
            </xpath>

            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Customer Service">
                    <group>
                        <group>
                            <separator string="Cancellation Request"
                                       style="color:#7d435d; font-size:16px; font-weight:bold"/>
                            <field name="cancellation"/>
                            <field name="canc_req_datetime"/>
                        </group>
                        <group>
                            <separator string="RTO Request" style="color:#7d435d; font-size:16px; font-weight:bold"/>
                            <field name="rto_req"/>
                            <field name="rto_req_datetime"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <separator string="Return" style="color:#7d435d; font-size:16px; font-weight:bold"/>
                            <field name="return_request"/>
                            <field name="return_request_datetime"/>
                        </group>
                        <group>
                            <separator string="Refund Request" style="color:#7d435d; font-size:16px; font-weight:bold"/>
                            <field name="refund_request_check"/>
                            <field name="refund_request_datetime"/>
                        </group>

                    </group>

                </page>
            </xpath>
            <xpath expr="//form/header/field[@name='state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
<!--            btn btn-sm-->
            <xpath expr="//form/header">
                <button name="request_cancellation_button" groups="customer_service.customer_experience_group,customer_service.warehouse_group,customer_service.order_processing_group" type="object" string="Request Cancellation"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}" class="btn btn-sm"/>
                <button name="refund_request" type="object" groups="account.group_account_invoice,customer_service.customer_experience_group,customer_service.order_processing_group" string="Refund Request" attrs="{'invisible':['|',('vinculum_payment_method','!=','Prepaid'),('custom_state', 'not in', ['order_cancel'])]}" class="btn btn-sm"/>
                <button name="rto_button" groups="customer_service.tracking_group" type="object" string="RTO Request" attrs="{'invisible':[('custom_state', 'not in', ['order_cancel'])]}" class="btn btn-sm"/>
                <button name="return_button" type="object" string="Return" attrs="{'invisible':[('custom_state', 'not in', ['order_cancel'])]}" class="btn btn-sm"/>
<!--                <button name="send_approved" type="object" string="Send for Approval" class="btn btn-primary"/>-->
                <field name="claim_status" widget="statusbar"/>
            </xpath>

            <xpath expr="//form[@class='o_sale_order']/header" position="after">
                <!--    Custom State   -->
                <header>
                    <!--   Buttons   -->
                    <field name="custom_state" widget="statusbar" />
                    <button name="vaniculum_button" type="object" string="Sync Vinculum Button"
                            class="btn btn-sm btn-success" attrs="{'invisible': [('custom_state', 'not in', ['order_cancel'])]}"/>
                </header>
                <!--   Approval Status            -->
                <header>
                    <field name="approval_status" widget="statusbar"/>
<!--                    <button name="reverse_pick" type="object" string="Reverse Pick" attrs="{'invisible':[('custom_state', 'not in', ['order_cancel'])]}" class="btn btn-sm"/>-->
                    <button name="marked_delivered" type="object" string="Marked as Delivered" class="btn btn-sm"/>
                    <button name="approve_cancellation" string="Mark as Cancelled" groups="customer_service.warehouse_group" type="object" attrs="{'invisible': [('state', 'not in', ['draft'])]}" class="btn btn-sm"/>
                    <button name="approve_funds" string="Approve Funds" groups="customer_service.management_group" type="object" attrs="{'invisible': [('custom_state', 'not in', ['refund_requested','order_cancel'])]}" class="btn btn-sm"/>
                    <button name="reject_funds" string="Reject Funds" groups="customer_service.management_group" type="object" attrs="{'invisible': [('custom_state', 'not in', ['refund_requested','order_cancel'])]}" class="btn btn-sm"/>
                    <button name="mark_refunded" string="Mark as Refunded" groups="customer_service.management_group,account.group_account_invoice" type="object" attrs="{'invisible': ['|', '|',('custom_state','in',['refunded']),('approval_status', 'not in', ['approved']),('vinculum_payment_method','!=','Prepaid')]}" class="btn btn-sm"/>

                </header>
            </xpath>

        </field>

    </record>

    <record model="ir.actions.act_window" id="sale.action_quotations_with_onboarding">
        <field name="name">Orders</field>
    </record>

<!--    <menuitem id="sale.menu_sale_order" active="False"/>-->
    <menuitem id="sale.menu_sale_quotations"
              name="Orders"
              action="sale.action_quotations_with_onboarding"
              groups="sales_team.group_sale_salesman"
              parent="sale.sale_order_menu"
              sequence="10"/>


    <record id="view_delivery_carrier_form_inherit" model="ir.ui.view">
            <field name="name">delivery.carrier.form.inherit</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='free_over']" position="after">
                    <field name="spoc"/>
                </xpath>
            </field>
    </record>

<!--    Master reasons -->
         <record id="master_reason_view_list" model="ir.ui.view">
            <field name="model">reason.reasons</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="master_reason_view_form" model="ir.ui.view">
            <field name="model">reason.reasons</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_reason_master" model="ir.actions.act_window">
            <field name="name">Reasons</field>
            <field name="res_model">reason.reasons</field>
            <field name="view_mode">tree,form</field>
        </record>


<!--    Menuitem-->
        <menuitem
            id="menu_reason_master"
            name="Reasons"
            parent="sale.menu_sale_config"
            action="customer_service.action_reason_master"
            sequence="20"/>


</odoo>