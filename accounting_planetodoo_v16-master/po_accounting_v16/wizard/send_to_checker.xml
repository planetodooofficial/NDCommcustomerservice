<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="create_send_checker_form" model="ir.ui.view">
        <field name="name">view.send.checker.form</field>
        <field name="model">send.checker</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group col="4">
                        <field name="checker_id" required="True" options="{'no_create': 1, 'no_edit': 1, 'no_open': 1}"/>
                    </group>
                </group>
                <footer>
                    <button string="Send" class="btn-primary" name="send_for_checking" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>